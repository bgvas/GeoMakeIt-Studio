
{
  "page_title":"Questions Editor",
  "page_description":"You can add/edit/remove your questions in here",
  "designer_type":"data",
  "file":"questions",
  "designer":{
    "0":{
      "title":"Question Group1",
      "tooltip":"Just an example tooltip",
      "components":{
        "question":{
          "type":"textBox",
          "validation": [
            {
              "Required": true
            }
          ],
          "tooltip":"The question that the user will have to answer",
          "placeholder": "type text"
        },
        "question_type":{
          "type":"dropdown",
          "value":"multiple_choice",
          "items":[
            "multiple_choice",
            "multiple_choice_any",
            "multiple_choice_all",
            "fill_in_the_blank"
          ],
          "validation": [
            {
              "Required": true
            }
          ]
        },
        "possible_answers":{
          "type":"arrayOfStrings",
          "validations":"visible_if:this.question_type,(multiple_choice, multiple_choice_any, multiple_choice_all)"
        },
        "correct_answer":{
          "type":"textBox",
          "tooltip":"The unique id of a possible answer",
          "placeholder":"0",
          "validations":"required_if:this.question_type,(multiple_choice, multiple_choice_any, multiple_choice_all)"
        }
      }
    },
    "1":{
      "title":"Question Group2",
      "components":{
        "image":{
          "type":"image",
          "validation": [
            {
              "Required": true
            }
          ]
        }
      }
    }
  }
}

