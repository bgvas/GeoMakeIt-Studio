{
  "page_title": "Questions Editor",
  "page_description": "You can add/edit/remove your questions in here",
  "designer_type": "data",
  "file": "questions",
  "designer": {
    "0": {
      "title": "Questions Group",
      "tooltip": "Just an example tooltip",
      "components": {
        "question": {
          "type": "textbox",
          "validation": "required|string|min:5|max:80",
          "tooltip": "The question that the user will have to answer"
        },
        "question_type": {
          "type": "dropdown",
          "value": "multiple_choice",
          "items": [
            "multiple_choice",
            "multiple_choice_any",
            "multiple_choice_all",
            "fill_in_the_blank"
          ],
          "validation": "required|..."
        },
        "possible_answers": {
          "type": "string_array",
          "validation": "visible_if:this.question_type,(multiple_choice, multiple_choice_any, multiple_choice_all)"
        },
        "correct_answer": {
          "tooltip": "The unique id of a possible answer",
          "placeholder": "0",
          "validation": "required_if:this.question_type,(multiple_choice, multiple_choice_any, multiple_choice_all)"
        },
      }
    },
    "1": {
      "components": {
        "image": {
          "type": "image",
          "validation": "...."
        }
      }
    }
  }
}
